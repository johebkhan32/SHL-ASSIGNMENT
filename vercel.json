{
    "version": 2,
    "buildCommand": "pip install -r api/requirements.txt",
    "outputDirectory": ".",
    "installCommand": "pip install -r api/requirements.txt",
    "builds": [
      { 
        "src": "api/api.py", 
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb"
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "api/api.py" }
    ],
    "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
    "git": {
      "deploymentEnabled": {
        "main": true
      }
    }
}


  

  